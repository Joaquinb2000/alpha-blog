<%= render "shared/errors", obj: @user%>

<div class="container p-4 shadow-lg rounded border border-info">
    <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :username, class: "col-form-label col-2"%>
            <div class= "col-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :email, class: "col-form-label col-2"%>
            <div class="col-10">
                <%= f.text_field :email, class: "form-control", placeholder: "Enter a your email address"%>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "col-form-label col-2" %>
            <div class="col-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
            </div>
        </div>

        <div class="row justify-content-center ">
            <%= f.submit(@user.new_record? ? "Sign Up!" : "Update Account", class: "btn btn-outline-light btn-lg") %>
        </div>
    <% end %>
</div>
