<h1 class="text-center text-light my-4">Log in</h1>

<div class="container w-75 p-4 shadow-lg rounded border border-info text-light">
    <%= form_with scope: :session, url: "/login", method: :post do |f| %>
        <div class="form-group row">
            <%= f.label :username, class: "col-form-label col-2"%>
            <div class="col-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :password, class: "col-form-label col-2"%>
            <div class="col-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <%= f.submit "Log in", class: "btn btn-outline-light btn-lg"%>
        </div>
    <% end %>
</div>
