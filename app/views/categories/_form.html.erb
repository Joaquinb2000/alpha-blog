<%= render 'shared/errors', obj: @category%>

<div class="container border border-info rounded shadow-lg text-white p-4">
    <%= form_with(model: @category, local: true) do |f|%>
        <div class="form-group row">
            <%= f.label :name, 'Category name', class: "col-form-label col-2"%>
            <div class="col-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Category name"%>
            </div>
        </div>

        <div class="row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg"%>
        </div>
    <% end %>
</div>
