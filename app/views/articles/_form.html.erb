<%= render 'shared/errors', obj: @article%>

<div class="container border border-info rounded shadow-lg text-white p-4">
    <%= form_with(model: @article, local: true) do |f|%>
        <div class="form-group row">
            <%= f.label :title, 'Title', class: "col-form-label col-2"%>
            <div class="col-10">
                <%= f.text_field :title, class: "form-control", placeholder: "Content of article"%>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :description, class: "col-form-label col-2" %>
            <div class="col-10">
                <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Content of article"%>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :category, class: "col-form-label col-2" %>
            <div class="col-10">
                <%= f.collection_select :category_ids, Category.all, :id, :name,
                {prompt: "(Optional) Select the categories you want (Press the ctrl or cmnd key while clicking to select multiple)"},
                {multiple: true, class: "custom-select", id: "category", size: 3} %>
            </div>
        </div>

        <div class="row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg"%>
        </div>
    <% end %>
</div>


